#include <iostream>

int main() {
    int n;
    std::cin >> n;
    if (n <= 0) {
        std::cout << 0 << std::endl;
        return 0;
    }
    int* arr = new int[n];
    for (int i = 0; i < n; ++i) {
        std::cin >> arr[i];
    }
    int max = 1;
    int count = 1;
    for (int i = 1; i < n; ++i) {
        if (arr[i - 1] <= arr[i]) {
            ++count;
            if (count > max) {
                max = count;
            }
        } else {
            count = 1;
        }
    }
    std::cout << max << std::endl;
    delete[] arr;
    return 0;
}
