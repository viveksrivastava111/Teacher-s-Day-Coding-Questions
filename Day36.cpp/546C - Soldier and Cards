#include <iostream>
#include <queue>

using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n, k1, k2, card;
    cin >> n;

    queue<int> a, b;

    cin >> k1;
    for (int i = 0; i < k1; ++i) {
        cin >> card;
        a.push(card);
    }

    cin >> k2;
    for (int i = 0; i < k2; ++i) {
        cin >> card;
        b.push(card);
    }

    int rounds = 0;

    while (!a.empty() && !b.empty()) {
        int topA = a.front(); a.pop();
        int topB = b.front(); b.pop();
        ++rounds;

        if (topA > topB) {
            a.push(topB);
            a.push(topA);
        } else {
            b.push(topA);
            b.push(topB);
        }

        if (rounds > 1e5) {
            cout << -1 << '\n'; // Infinite loop safeguard
            return 0;
        }
    }

    int winner = a.empty() ? 2 : 1;
    cout << rounds << " " << winner << '\n';

    return 0;
}
